{
  "manifest_version": 3,
  "name": "Page Color Filter",
  "version": "1.0",
  "description": "Apply color filters and adjust brightness of web pages",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"]
}